CXX       = clang++
CPPFLAGS  = -std=c++17 -Wall -O3 -funroll-loops -m64 -march=native -fopenmp -I${MKL_INC_DIR} \
            -I ${HOME}/installs/include \
            -isystem ${HOME}/opt/arpackpp/include -isystem ${HOME}/opt/arpackpp/examples/areig
LIBS      = -L ${HOME}/installs/lib -lqbasis \
            -larpack \
            -L${MKL_LIB_DIR}/lib/intel64 -Wl,--no-as-needed -lmkl_gf_lp64 -lmkl_intel_thread -lmkl_core -liomp5 -lpthread -lm -ldl

include ../object_list.txt

all: $(EXEC)
	@echo '************  COMPILED!  ************'

%.x: %.cc
	$(CXX) $(CPPFLAGS) $< $(LIBS) -o $@

clean:
	$(RM) *.o *.x
