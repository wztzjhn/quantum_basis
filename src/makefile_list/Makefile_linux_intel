CXX       = dpcpp
CXXFLAGS  = -std=c++17 -O3 -unroll -ipo -no-fma -fp-model=precise -m64 -march=native -fPIC -qopenmp -I${MKL_INC_DIR} \
            -isystem ${HOME}/opt/arpackpp/include -isystem ${HOME}/opt/arpackpp/examples/areig
LIBS      = -larpack \
            -L${MKL_LIB_DIR} -lmkl_gf_lp64 -lmkl_intel_thread -lmkl_core -liomp5 -lpthread -lm -ldl \
            -qopenmp

include makefile_list/object_list.txt

libqbasis.a: $(OBJS)
	ar rvs libqbasis.a $(OBJS)

install: libqbasis.a
	$(RM) ${HOME}/installs/lib/libqbasis.*; cp libqbasis.a ${HOME}/installs/lib; cp qbasis.h ${HOME}/installs/include

%.o: %.cc
	$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	$(RM) *.o *.a
